<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mybatiss.base.mysql.mapper.BaseMapper">
    <select id="listByKeys" parameterType="com.mybatiss.base.mysql.SqlTemplate" resultType="java.util.Map">
        SELECT * FROM ${tableName} WHERE ${object} IN
        <foreach collection="objectList" item="object" index="index" open="(" close=")" separator=",">
            #{object}
        </foreach>
    </select>

    <insert id="saveBatch" keyColumn="id" keyProperty="id" parameterType="com.mybatiss.base.mysql.SqlTemplate" useGeneratedKeys="true">
        INSERT INTO ${tableName}
            <foreach collection="saveFieldNames" item="saveFieldName" index="index" open="(" close=")" separator=",">
                `${saveFieldName}`
            </foreach>
        VALUES
            <foreach collection="saveValues" item="fields" separator=",">
                <foreach collection="fields" item="paramMap" separator="," open="(" close=")">
                    #{paramMap.value${paramMap.type}}
                </foreach>
            </foreach>
    </insert>

    <select id="select" parameterType="com.mybatiss.base.mysql.SqlTemplate" resultType="java.util.Map">
        ${sql}
    </select>

    <select id="selectByBaseDO" parameterType="com.mybatiss.base.mysql.SqlTemplate" resultType="java.util.Map">
        SELECT * FROM ${tableName} WHERE
        <trim prefixOverrides="and">
            <foreach collection="listMap" item="paramMap" >
               AND #{paramMap.field} = #{paramMap.value${paramMap.type}}
            </foreach>
        </trim>
    </select>

    <select id="count" parameterType="com.mybatiss.base.mysql.SqlTemplate" resultType="java.lang.Integer">
        ${sql}
    </select>

    <update id="update" keyColumn="id" parameterType="com.mybatiss.base.mysql.SqlTemplate">
        ${sql}
    </update>

    <delete id="remove" parameterType="com.mybatiss.base.mysql.SqlTemplate">
        ${sql}
    </delete>
</mapper>